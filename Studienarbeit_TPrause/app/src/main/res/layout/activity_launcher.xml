<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pageBackground">

    <ImageView
        android:id="@+id/iv_launcher_fhlogo_dots"
        android:layout_width="40dp"
        android:layout_height="200dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/iv_launcher_fhlogo_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.124"
        app:srcCompat="@drawable/img_fh_hof_logo_dots"
        android:contentDescription="@string/app_name" />

    <ImageView
        android:id="@+id/iv_launcher_fhlogo_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:tint="@color/normalText"
        app:layout_constraintBottom_toBottomOf="@+id/iv_launcher_fhlogo_dots"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_launcher_fhlogo_dots"
        app:layout_constraintTop_toTopOf="@+id/iv_launcher_fhlogo_dots"
        app:srcCompat="@drawable/img_fh_hof_logo_text"
        android:contentDescription="@string/app_name" />
</androidx.constraintlayout.widget.ConstraintLayout>